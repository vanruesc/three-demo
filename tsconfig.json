{
	"compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
		"moduleResolution": "node",
		"module": "ESNext",
    "target": "ES5",
    "noEmit": true,
    "strict": true,
    "removeComments": true,
    "strictNullChecks": false,
		"downlevelIteration": true
	},
	"include": [
		"src/**/*",
		"demo/src/**/*"
	]
}
